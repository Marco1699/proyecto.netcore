@model ClienteAPI.Models.ProveedoresViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<br />

<h3>Seguro quiere eliminar el proveedor?   @Html.DisplayFor(model => model.NombreProveedor)</h3>
<div>
  
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Proveedor")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreProveedor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Numero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numero)
        </dd>
    </dl>
    
    <form asp-action="Delete">
         @Html.HiddenFor(model => model.IdProveedor)
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Atras</a>
    </form>
</div>
